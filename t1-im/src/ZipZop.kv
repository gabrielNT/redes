<Login>:
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            size_hint_y: 7
            Label:
                text: "Entre com o nome de usuario desejado:"
        BoxLayout:
            size_hint_y: 3
            TextInput:
                id: login
                multiline: False
                size_hint_x: 7
            Button:
                text: "Entrar"
                size_hint_x: 3
                on_press: root.sucess(login.text)

<Connected>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 90
            TextInput:
                id: log
                readonly: True
                size_hint_x: 4
            Button:
                text: "Lista Usuarios online"
                on_press: root.disconnect()
                size_hint_x: 1
        BoxLayout:
            size_hint_y: 10
            TextInput:
                id: message
                auto_ident: True
                size_hint_x: 8
            Button:
                text: "Enviar"
                size_hint_x: 2
                on_press: root.send()
