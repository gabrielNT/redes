<Login>:
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            size_hint_y: 7
            Label:
                text: "Entre com o nome de usuario desejado:"
        BoxLayout:
            size_hint_y: 0.4
            TextInput:
                id: login
                multiline: False
                size_hint_x: 7
            Button:
                text: "Entrar"
                size_hint_x: 3
                on_press: root.sucess(login.text)

